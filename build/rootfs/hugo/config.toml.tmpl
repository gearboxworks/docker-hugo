baseURL = "http://gearbox.local/"
title = "Gearbox: Hugo Site"
languageCode = "en-us"
author = "Gearbox Works"
copyright = "Copyright 2020"
paginate = 32
enableinlineshortcodes = true
theme = "monopriv"
publishDir = "/project/www/"
enableRSS = true
canonifyurls = true
relativeurls = false
ignoreFiles = [ "\\.swp$" ]
builddrafts = true

[frontmatter]
	lastmod = [":git", "lastmod", ":fileModTime", "date", "publishDate"]

